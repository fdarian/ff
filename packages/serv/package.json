{
	"name": "ff-serv",
	"version": "0.1.10",
	"type": "module",
	"bin": {
		"ff-serv": "./dist/cli.js"
	},
	"exports": {
		".": "./src/index.ts",
		"./orpc": "./src/exports/orpc.ts",
		"./cache": "./src/exports/cache.ts",
		"./cache/ioredis": "./src/exports/cache-ioredis.ts",
		"./cache/bun-redis": "./src/exports/cache-bun-redis.ts"
	},
	"files": [
		"dist",
		"src"
	],
	"scripts": {
		"build": "tsup && bun run build:cli",
		"build:cli": "bun build src/cli/index.ts --production --target=bun --outfile dist/cli.js",
		"check:tsc": "tsgo --noEmit",
		"check:lint": "biome check",
		"test": "bun -b vitest run",
		"dev": "tsup --watch"
	},
	"devDependencies": {
		"@effect/cli": "^0.71.0",
		"@effect/platform-bun": "^0.87.0",
		"@effect/vitest": "^0.27.0",
		"@orpc/client": "^1.13.2",
		"@types/bun": "^1.3.2",
		"@types/cli-progress": "^3.11.6",
		"@typescript/native-preview": "^7.0.0-dev.20260216.1",
		"cli-progress": "^3.12.0",
		"ff-effect": "^0.0.10",
		"inquirer": "^12.10.0",
		"postgres": "^3.4.7",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"peerDependencies": {
		"effect": "^3",
		"@effect/opentelemetry": "^0.60.0",
		"get-port": "^7",
		"@orpc/server": "^1",
		"ioredis": "^5"
	},
	"peerDependenciesMeta": {
		"ioredis": {
			"optional": true
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/fdarian/ff.git",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/fdarian/ff.git"
	},
	"bugs": {
		"url": "https://github.com/fdarian/ff/issues"
	},
	"keywords": [
		"effect",
		"server",
		"service"
	],
	"dependencies": {
		"@effect/platform": "^0.94.1",
		"nanoid": "^5.1.6"
	}
}
