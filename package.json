{
	"name": "@repo/root",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"internals/*"
		]
	},
	"scripts": {
		"changeset": "changeset",
		"ci:version": "changeset version && bun install --no-frozen-lockfile",
		"ci:release": "bun run build && bun scripts/patch-exports.ts && changeset publish",
		"build": "turbo run build",
		"format": "biome check --write"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.4",
		"@changesets/cli": "^2.29.7",
		"turbo": "^2.8.9"
	},
	"packageManager": "bun@1.3.9"
}
